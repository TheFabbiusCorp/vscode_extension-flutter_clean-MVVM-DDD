{
  "name": "flutter-clean-mvvm-ddd",
  "displayName": "Flutter Feature Scaffolding",
  "description": "Add new feature easily with well structured directories (Clean Architecture pattern)",
  "version": "0.0.1",
  "publisher": "TheFabbius",
  "repository": {
    "type": "git",
    "url": "https://github.com/TheFabbius/vscode_extension-flutter-clean-MVVM-DDD"
  },
  "license": "MIT",
  "engines": {
    "vscode": "^1.31.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "keywords": [
    "clean-architecture",
    "dart",
    "flutter",
    "mvvm",
    "ddd"
  ],
  "icon": "assets/logo.png",
  "activationEvents": [
    "onCommand:extension.new-feature-all",
    "onCommand:extension.new-feature-data",
    "onCommand:extension.new-feature-domain",
    "onCommand:extension.new-feature-presentation",
    "workspaceContains:**/pubspec.yaml"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.new-feature-all",
        "title": "New Feature - All Layers",
        "category": "Flutter Clean MVVM DDD: ",
        "icon": "assets/logo.png"
      },
      {
        "command": "extension.new-feature-data",
        "title": "New Feature - Data Layer",
        "category": "Flutter Clean MVVM DDD: ",
        "icon": "assets/logo.png"
      },
      {
        "command": "extension.new-feature-domain",
        "title": "New Feature - Domain Layer",
        "category": "Flutter Clean MVVM DDD: ",
        "icon": "assets/logo.png"
      },
      {
        "command": "extension.new-feature-presentation",
        "title": "New Feature - Presentation Layer",
        "category": "Flutter Clean MVVM DDD: ",
        "icon": "assets/logo.png"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "extension.new-feature-all",
          "group": "cleanArchitectureGroup@1",
          "when": "explorerResourceIsFolder"
        },
        {
          "command": "extension.new-feature-data",
          "group": "cleanArchitectureGroup@2",
          "when": "explorerResourceIsFolder"
        },
        {
          "command": "extension.new-feature-domain",
          "group": "cleanArchitectureGroup@3",
          "when": "explorerResourceIsFolder"
        },
        {
          "command": "extension.new-feature-presentation",
          "group": "cleanArchitectureGroup@4",
          "when": "explorerResourceIsFolder"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile",
    "test": "node ./out/test/runTest.js",
    "deploy": "vsce publish --yarn"
  },
  "devDependencies": {
    "@types/change-case": "^2.3.1",
    "@types/glob": "^7.1.1",
    "@types/js-yaml": "^3.12.1",
    "@types/lodash": "^4.14.121",
    "@types/mkdirp": "^0.5.2",
    "@types/mocha": "^5.2.6",
    "@types/node": "^12.7.8",
    "@types/rimraf": "^2.0.2",
    "@types/semver": "^6.0.2",
    "@types/vscode": "^1.31.0",
    "cz-conventional-changelog": "^3.0.2",
    "glob": "^7.1.4",
    "mocha": "^6.1.4",
    "tslint": "^5.12.1",
    "typescript": "^3.9.10",
    "vsce": "^1.81.1",
    "vscode-test": "^1.2.0"
  },
  "dependencies": {
    "change-case": "^3.1.0",
    "cz-conventional-changelog": "^3.0.2",
    "js-yaml": "^3.13.1",
    "lodash": "^4.17.21",
    "mkdirp": "^0.5.1",
    "semver": "^6.3.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}